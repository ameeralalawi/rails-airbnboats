
<div class="container">
<div id="intro">
  <div id="name" style="vertical-align: middle">
    <h1><strong><%= @boat.name %></strong></h1>
  </div>
    <div id="rating">
  <p>rating</p>
  </div>

    <%#image_tag @boat.user.picture_url %>
    <img src="http://www.therichest.com/wp-content/uploads/2014/03/abramovich-chelsea-ronaldo-mourinho.jpg" id="owner-picture" alt="">

  <div id="owner">
    <p><%= @boat.user.firstname %> <%= @boat.user.lastname %></p>
  </div>
</div>




<div class="sub-body">

  <% @boat.photos.each do |photo| %>
  <%= link_to cl_image_path(photo.path, width: 700, height: 500, crop: :fill), class:"swipebox" do %>
      <%= cl_image_tag photo.path, width: 300, height: 200, crop: :fill %>
    <% end %>
  <% end %>

  <div class="content">
    <div class="details">
      <p>Category: <%= @boat.category %></p>
      <p>Subcategory: <%= @boat.subcategory %></p>
      <p>Number of beds: <%= @boat.num_of_beds %></p>
      <p>Number of bath: <%= @boat.num_of_bath %></p>
      <p>Total capacity: <%= @boat.capacity %></p>
      <p>Boat description: <%= @boat.description %></p>
       <p>Boat description: <%= @boat.description %></p>
        <p>Boat description: <%= @boat.description %></p>
         <p>Boat description: <%= @boat.description %></p>
          <p>Boat description: <%= @boat.description %></p>
      <p>Price: <%= @boat.price %>euros/day</p>
    </div>

    <div id="booking">

    </div>
  </div>
</div>

</div>

